{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strict": true,
    "outDir": "public",
    "lib": ["es6", "es7", "dom"],
    "baseUrl": "src",
    "paths": {
      "public/*": ["./public/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["public", "node_modules"]
}
